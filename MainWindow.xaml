<Window x:Class="Planner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Planner"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized">

    <StackPanel>
        <!--button to go the previous month-->
        <Button Height="50" Width="50" Content="&lt;" Click="prevMonth_Click" >
            
        </Button>
        <!--Month the calendar is on-->
        <TextBlock Name="MonthDisplay" Height="150" Width="300" FontSize="50" FontFamily="Resources/PetitFormalScript-Regular.ttf #Petit Formal Script, Segoe Script" TextAlignment="center">
            September
        </TextBlock>
        <!--button to go to next month-->
        <Button Height="50" Width="50" Content="&gt;" Click="NextMonth_Click">
            
        </Button>
        <!--Add event button-->    
        <Button Click="AddEvent_Click" >
            Add Event
        </Button>
    </StackPanel>
</Window>
