<Window x:Class="Planner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Planner"
        mc:Ignorable="d"
        Title="MainWindow" Width="800" Height="600">

    <StackPanel>
        <Grid>
            <!--Setting up the grid to help with the calendar-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="600"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <DockPanel Background="Lavender">
                    <!--button to go the previous month-->
                    <Button Height="50" Width="50" Margin="50, 30, 0, 0" Content="&lt;" 
                        HorizontalAlignment="Center" VerticalAlignment="Top" 
                        FontWeight="ExtraBlack" Click="prevMonth_Click"
                            Background="LavenderBlush" BorderBrush="HotPink"/>
                    <!--Month the calendar is on-->
                    <TextBlock Name="MonthDisplay" Height="70" Width="380" Margin="25, 20, 0, 0" 
                           FontSize="50" FontFamily="Resources/PetitFormalScript-Regular.ttf #Petit Formal Script, Segoe Script" 
                           TextAlignment="center" HorizontalAlignment="Center" 
                           VerticalAlignment="Top">
                    September
                    </TextBlock>
                    <!--button to go to next month-->
                    <Button Height="50" Width="50" Margin="0, 30, 0, 0" Content="&gt;" 
                        HorizontalAlignment="Center" VerticalAlignment="Top" 
                        FontWeight="ExtraBlack" Click="NextMonth_Click"
                        Background="LavenderBlush" BorderBrush="HotPink"/>
                    <!--Add event button-->
                </DockPanel>
            </Grid>
        </Grid>
            
            <DockPanel>
                <Button Content="Add Event" Width="100" Height="50" Margin="0, 30, 0, 50" 
                        HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" 
                        Click="AddEvent_Click"/>
            </DockPanel>
              
    </StackPanel>
</Window>
