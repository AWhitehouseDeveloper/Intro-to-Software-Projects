<Window x:Class="Planner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Planner"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized">

    <StackPanel>
        <!--button to go the previous month-->
        <Button Height="50" Width="50" Content="&lt;" >
            
        </Button>
        <!--Month the calendar is on-->
        <TextBlock Height="150" Width="300" FontSize="50" FontFamily="ms-appx::///System.Data.Common, Version=4.2.2.0, Culture=neutral, PublicKeyToken=b03f5f7f11d50a3a/Planner/PetitFormalScript-Regular.ttf" TextAlignment="center">
            September
        </TextBlock>
        <!--button to go to next month-->
        <Button Height="50" Width="50" Content="&gt;">
            
        </Button>
        <!--Add event button-->    
        <Button>
            Add Event
        </Button>
    </StackPanel>
</Window>
